@model List<IntegrationHub.Web.Models.ProductViewModel>

@{
    ViewData["Title"] = "Vitrin";
    // launchSettings.json'dan aldığımız DOĞRU adres:
    string apiBaseUrl = "http://localhost:5001";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">IntegrationHub Mağazası</h1>
    <p class="lead text-muted">En yeni teknolojik ürünleri keşfedin.</p>
</div>

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div style="height: 250px; overflow: hidden; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                // API'den gelen resim yolunu tam URL'e çeviriyoruz
                                <img src="@(apiBaseUrl + product.ImageUrl)" class="card-img-top" alt="@product.Name" style="max-height: 100%; width: auto;">
                            }
                            else
                            {
                                <span class="text-muted">Resim Yok</span>
                            }
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small">@product.SKU</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="h5 mb-0 text-success fw-bold">@product.SalePrice ₺</span>
                                <button class="btn btn-outline-primary btn-sm">Sepete Ekle</button>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <small class="text-muted">Stok: @product.StockQuantity</small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">Henüz listelenecek ürün yok.</div>
            </div>
        }
    </div>
</div>