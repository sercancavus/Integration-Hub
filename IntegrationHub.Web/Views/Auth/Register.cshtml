@model IntegrationHub.Web.Models.RegisterModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">Kayıt Ol</h3>
                </div>
                <div class="card-body">

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Register" method="post">

                        <div class="mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" placeholder="Adınız Soyadınız" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Adresi</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="******" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Kayıt Ol</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Zaten hesabın var mı? <a asp-action="Login">Giriş Yap</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>