@model IntegrationHub.Web.Models.ProductViewModel

<h2>Ürün Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Ürün Adı</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Barkod</label>
        <input asp-for="Barcode" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Stok Kodu (SKU)</label>
        <input asp-for="SKU" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Satış Fiyatı</label>
        <input asp-for="SalePrice" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Piyasa Fiyatı</label>
        <input asp-for="MarketPrice" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Stok Adedi</label>
        <input asp-for="StockQuantity" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Kategori</label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
            <option value="">-- Kategori Seçiniz --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>