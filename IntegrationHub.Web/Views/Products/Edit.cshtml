@model IntegrationHub.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Ürünü Düzenle";
    var apiBaseUrl = "http://localhost:5001"; // Resimleri göstermek için API adresi
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">Ürünü Düzenle</h3>
                </div>
                <div class="card-body">

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3 text-center">
                                <label class="form-label d-block fw-bold">Mevcut Resim</label>
                                <img src="@(apiBaseUrl + Model.ImageUrl)" class="img-thumbnail" style="max-height: 150px;" />
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Resmi Değiştir (İsteğe Bağlı)</label>
                            <input asp-for="ImageUpload" type="file" class="form-control" accept="image/*" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Barkod</label>
                                <input asp-for="Barcode" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">SKU</label>
                                <input asp-for="SKU" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Satış Fiyatı</label>
                                <input asp-for="SalePrice" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Piyasa Fiyatı</label>
                                <input asp-for="MarketPrice" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Stok Adedi</label>
                            <input asp-for="StockQuantity" type="number" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            @if (ViewBag.Categories != null)
                            {
                                <select asp-for="CategoryId" class="form-select"
                                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                    <option value="">-- Kategori Seçiniz --</option>
                                </select>
                            }
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">İptal</a>
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>