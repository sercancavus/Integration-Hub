@model IntegrationHub.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Ürünü Sil";
    var apiBaseUrl = "http://localhost:5001";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">Silme Onayı</h3>
                </div>
                <div class="card-body text-center">

                    <h4 class="text-danger mb-4">Bu ürünü silmek istediğine emin misin?</h4>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@(apiBaseUrl + Model.ImageUrl)" class="img-thumbnail mb-3" style="max-height: 150px;" />
                    }

                    <h2 class="fw-bold">@Model.Name</h2>
                    <p class="text-muted">Bu işlem geri alınamaz.</p>

                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">Evet, Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>